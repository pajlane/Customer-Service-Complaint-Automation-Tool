    <Grid>
        <TabControl>
            <TabItem Header="Replacements" />
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="89*"/>
                </Grid.ColumnDefinitions>
            </Grid>

            
            <TextBlock HorizontalAlignment="Left" Height="38" Margin="83,84,0,0" TextWrapping="Wrap" Text="Complaint #" VerticalAlignment="Top" Width="84" RenderTransformOrigin="0.985,0.436" Grid.ColumnSpan="2"/>

            <TextBox x:Name="ComplaintNumberx" HorizontalAlignment="Left" Height="20" Margin="167,84,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="190"/>
           
